@using DataAccess.Entities
@{
    Layout = "Products/_layout";
    Product product = ViewBag.Product;
}

<div class="block">
    <div class="ml-4">
        <h3>Bạn chắn chắn muốn xóa sản phẩm</h3>
        <div>Tên: @product.Name</div>
        <div>Giá: @product.Price</div>
        <div>Nhà cung cấp: @product.ProducerId</div>
        <div>Danh mục: @product.CategoryId</div>
    </div>
    <form asp-action="Delete">
        <div class="form-row col-md-4">
            <div class="form-group col-md-6">
                <input type="hidden" value="@product.Id" />
                <input type="submit" value="Delete" class="btn btn-primary btn-block" />
            </div>
            <div class="form-group col-md-6">
                <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Back to List</a>
            </div>
        </div>
    </form>
</div>